{
  "name": "riot-google-maps",
  "version": "0.0.1",
  "description": "riotjs google maps integration",
  "main": "riot-google-maps.js",
  "scripts": {
    "clean": "rimraf ./riot-google-maps.js ./riot-google-maps.min.js",
    "build:lib": "browserify -x riot -t babelify -t riotify src/index.js > riot-google-maps.js",
    "build:min": "uglifyjs -c -m -o riot-google-maps.min.js riot-google-maps.js", 
    "prebuild": "npm test && npm run-script clean",
    "build": "npm run-script build:lib && npm run-script build:min",
    "test": "./node_modules/karma/bin/karma start karma.conf.js"
  },
  "keywords": [
    "riotjs",
    "riot",
    "google",
    "maps",
    "google-map",
    "google-maps"
  ],
  "author": "Christoffer Ahrling",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "babelify": "^6.4.0",
    "browserify": "^11.2.0",
    "expect.js": "^0.3.1",
    "karma": "^0.13.9",
    "karma-browserify": "^4.4.0",
    "karma-chrome-launcher": "^0.2.1",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-riot": "^1.0.0",
    "karma-sinon": "^1.0.4",
    "riot": "^2.2.4",
    "riotify": "^0.1.2",
    "sinon": "^1.17.2",
    "uglify-js": "^2.5.0"
  }
}
